// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Department {
  id        String    @id @default(cuid())
  name      String
  employees Employee[]
  visits    Visit[]   @relation("DepartmentVisits")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([name])
}

model Employee {
  id           String    @id @default(cuid())
  name         String
  email        String    @unique
  phone        String?
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])
  visitsToMe   Visit[]   @relation("VisitToEmployee")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([email])
  @@index([departmentId])
}

model Visitor {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String
  company   String?
  type      String   // "INTERNAL" or "EXTERNAL"
  visits    Visit[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model Visit {
  id              String    @id @default(cuid())
  visitorId       String
  visitor         Visitor   @relation(fields: [visitorId], references: [id])
  employeeId      String
  employee        Employee  @relation("VisitToEmployee", fields: [employeeId], references: [id])
  departmentId    String
  department      Department @relation("DepartmentVisits", fields: [departmentId], references: [id])
  purpose         String
  status          String    @default("PENDING") // PENDING, APPROVED, CHECKED_IN, IN_MEETING, COMPLETED, CANCELLED, TIMEOUT
  uniqueCode      String    @unique
  timeAllotted    Int       // in minutes
  checkInTime     DateTime?
  checkOutTime    DateTime?
  approvalTime    DateTime?
  securityNotes   String?
  securityAlerts  Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([status])
  @@index([uniqueCode])
  @@index([visitorId])
  @@index([employeeId])
  @@index([departmentId])
} 